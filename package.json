  "dependencies": {
    "bluebird": "^3.4.6",
    "mkdirp": "^0.5.1",
    "node-plantuml": "^0.5.0",
    "promise-streams": "^1.0.1"
  },
  "gitbook": {
    "properties": {
      "codeBlockKey": {
        "type": "string",
        "default": "plantuml",
        "description": "codebock to parse, eg: ```plantuml"
      },
      "imagesDir": {
        "type": "string",
        "default": "images",
        "description": "relative path within your _book directory where generated images are stored, the same directory is used within the root directory if it exsits."
      },
      "cacheImages": {
        "type": "boolean",
        "default": true,
        "description": "if the root dir has an {imagesDir} directory, use it as a cache"
      }
    }
  }
}
